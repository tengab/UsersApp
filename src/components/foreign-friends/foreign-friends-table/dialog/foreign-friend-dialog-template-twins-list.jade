md-dialog
    md-dialog-content
        table.table
            thead
                tr
                    th
                    th #
                    th First name
                    th Last name
                    th Nationality
            tbody
                tr.table-row-custom(ng-repeat='twin in $ctrl.fetchedUser.friends.twins')
                    td
                        input(type='radio' name='twinRadio' ng-value='twin' ng-model="$ctrl.selectedTwin")
                    td {{$index + 1}}
                    td {{twin.name.first}}
                    td {{twin.name.last}}
                    td {{twin.natFullName}}
        hr
    md-dialog-actions.action-buttons
        button.btn.btn-warning(ng-click='$ctrl.showDialogOfSelectedTwin($ctrl.selectedTwin);' ng-disabled="!$ctrl.selectedTwin")
            | Show selected twin
        button.btn.btn-warning(ng-click='$ctrl.closeDialog()')
            | Close