.panel.panel-default
    .panel-heading
        h3.panel-title
            strong Location
        button.glyphicon(ng-class="{'glyphicon-chevron-up':!isMapHidden, 'glyphicon-chevron-down':isMapHidden}" ng-click="isMapHidden=!isMapHidden")
    .collapse(ng-class="!isMapHidden ? 'in' : ''")
        .panel-body
            .row
                .col-xs-12
                    ng-map.ng-map(zoom="3" center="[{{$ctrl.fetchedUser.location.coordinates.latitude}},{{$ctrl.fetchedUser.location.coordinates.longitude}}]")
                        marker(position="[{{$ctrl.fetchedUser.location.coordinates.latitude}},{{$ctrl.fetchedUser.location.coordinates.longitude}}]" centered='true')
