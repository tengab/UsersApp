.panel.panel-default
    .panel-heading   
        h3.panel-title
            strong Location
        button(
            data-toggle="collapse"
            data-target="#user-map-panel"
            aria-expanded="false"
            aria-controls="user-map-panel"
            class='glyphicon',
            ng-class="{'glyphicon-chevron-up':!isMapHidden, 'glyphicon-chevron-down':isMapHidden}",
            ng-click="isMapHidden=!isMapHidden",
            )
    #user-map-panel.collapse(ng-class="!isMapHidden ? 'in' : ''")
        .panel-body
         .row
            .col-xs-12
                ng-map.ng-map(zoom="3" center="[{{fetchedUser.location.coordinates.latitude}},{{fetchedUser.location.coordinates.longitude}}]")
                    marker(position="[{{fetchedUser.location.coordinates.latitude}},{{fetchedUser.location.coordinates.longitude}}]" centered='true')
