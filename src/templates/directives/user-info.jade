.panel.panel-default
    .panel-heading
        h3.panel-title
            strong User info
        button.glyphicon(ng-class="{'glyphicon-chevron-up':!isInfoHidden, 'glyphicon-chevron-down':isInfoHidden}" ng-click="isInfoHidden=!isInfoHidden")
    .collapse(ng-class="!isInfoHidden ? 'in' : ''")
        .panel-body
            .row
                .col-xs-4.row-custom-photo
                    img(src='{{$ctrl.fetchedUser.picture.large}}')
                .col-xs-8.row-custom-details
                    div
                        strong {{$ctrl.fetchedUser.name.title}} {{$ctrl.fetchedUser.name.first}} {{$ctrl.fetchedUser.name.last}}
                        div
                        strong gender:
                        span {{$ctrl.fetchedUser.gender === 'male' ? ' &#9794' : $ctrl.fetchedUser.gender === 'female' ? ' &#9792' : '' }}
                        div
                        strong email: &nbsp
                        span {{ $ctrl.fetchedUser.email }}